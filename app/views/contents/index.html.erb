<div class="container">
	<div class="btn-group">
		<%#= link_to 'Ny Content', new_content_path, class: 'btn btn-default btn-xs' %>
	</div>
	<h1><%= (t :contents).capitalize %></h1>
	<div class="table-responsive">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th class="visible-lg text-center"><%= (t :id).uppercase rescue 'ID' %></th>
					<th class="visible-lg text center">Res.</th>
					<th class="visible-lg text center">Res. type</th>
					<th class="visible-lg text-center">Tilhører</th>
					<th class="">Menu navn</th>
					<th class="text-center">Aktiv</th>
					<th class="visible-lg text-center">Redirect</th>
					<th class="visible-lg text-center">Position</th>
					<th class="visible-lg">Controller nava</th>
					<th class="text-center">Kategori</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @contents.each do |content| %>
					<tr>
						<td class="visible-lg text-center"><%= content.id %></td>
						<td class="visible-lg text-center"><%= content.resource_id %></td>
						<td class="visible-lg text-center"><%= content.resource_type %></td>
						<td class="visible-lg text-center"><%= content.parent_id %></td>
						<td class=""><%= content.navlabel %></td>
						<td class="text-center">
							<% if content.active == true %>
								<%= link_to('+', content_active_path(content.id), {class: 'btn btn-xs btn-default activated'}) %>
							<% else %>
								<%= link_to('-', content_active_path(content.id), {class: 'btn btn-xs btn-default passified'}) %>
							<% end %>
						
							<%#= link_to content.active == true ? '√' : '–', content_active_path(content.id) %>
						</td>
						<td class="visible-lg text-center">
							<% if content.redirect == true %>
								<%= link_to('+', content_redirect_path(content.id), {class: 'btn btn-xs btn-default activated'}) %>
							<% else %>
								<%= link_to('-', content_redirect_path(content.id), {class: 'btn btn-xs btn-default passified'}) %>
							<% end %>
							<%#= link_to content.redirect == true ? '√' : '–', content_redirect_path(content.id) %>
						</td>
						<td class="visible-lg text-center"><%= content.position %></td>
						<td class="visible-lg"><%= content.controller_name %></td>
						<td class="text-center"><%= link_to content.category, change_category_path(content.id) %></td>
						<td colspan="3" class="text-right">
							<div class="btn-group">
								<%#= link_to 'Vis', content, class: 'btn btn-default btn-xs' %>
								<%= link_to 'Ret', edit_content_path(content), class: 'btn btn-default btn-xs' %>
								<%= link_to 'Slet', content, method: :delete, data: { confirm: 'Er du sikker?' }, class: 'btn btn-default btn-xs' %>
							</div>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<br>
</div>