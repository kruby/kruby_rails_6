<div class="container">
	
  <h1>Timeliste</h1>
  <h3><%= @partner.name rescue nil %></h3>

  <div class="row">
    <div class="col-lg-12">
      Klippekort status:
        (<%= @partner.vouchers.sum(:number) rescue nil %> 
        - <%= @partner.hours.sum(:number) rescue nil %>
        = <% @result = @partner.vouchers.sum(:number) - @partner.hours.sum(:number) rescue 0 %>
        <% if @result < 0 %>
          <span id='voucher_red'> <%= @result %> klip mangler</span>) 
        <% else %>
          <span id='voucher_green'> <%= @result %> klip resterer)</span> 
        <% end %>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-hover">

      <% for year in @years %>
        <%= render partial: "partners/partials/years_specified_public", locals: {partner: @partner, year: year} %>
      <% end %>

    </table>
  </div>
</div>