<% @level_3_main = level_2.children %>
<% unless @level_3_main.nil? %>
	<% @level_3_main.each do |level_3| -%>
	<% @no_route = 'No route ' + level_3.navlabel %>
		<ul class="dropdown-menu">
      <% if level_3.children.count > 0 %>
         <li class="dropdown-submenu"> 
      <% else %>
         <li>
      <% end %>
				<% if level_3.redirect? %>
						<%= link_to(level_3.navlabel, '/'+ level_3.controller_redirect.to_s + '/' + level_3.action_redirect.to_s) rescue link_to @no_route.html_safe %>
				<% else %>
					<% if level_3.controller_name == 'forside'%>
						<li><%= link_to level_3.controller_name.mb_chars.capitalize, root_url %>
					<% else %>
						<%= link_to(level_3.navlabel, '/'+ level_3.controller_name.to_s) rescue link_to @no_route.html_safe %>
					<% end %>
				<% end %>
		</ul>				
	<% end %>
<% end %>	
</li>